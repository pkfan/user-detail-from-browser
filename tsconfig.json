{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./es",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "rootDirs": ["./src", "./types"],
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", "dist", "test/**/*"]
}
